<div class="modal custom-modal fade" id="logout" role="dialog">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-body">
				<div class="form-header">
					<h3>@CoreResources.Logout</h3>
					<p>Are you sure you want to logout?</p>
				</div>
				<div class="modal-btn delete-action">
					<div class="row">
						<div class="col-6">
							<form asp-area="" asp-controller="Account" asp-action="Logout">
								<div class="text-center form-group">
									<button class="btn btn-primary w-100 logout-btn">@CoreResources.Logout</button>
								</div>
							</form>
							@*<a href="javascript:void(0);" class="btn btn-primary continue-btn">@CoreResources.Logout</a>*@
						</div>
						<div class="col-6">
							<a href="javascript:void(0);" data-bs-dismiss="modal" class="btn btn-primary cancel-btn">@CoreResources.Cancel</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
