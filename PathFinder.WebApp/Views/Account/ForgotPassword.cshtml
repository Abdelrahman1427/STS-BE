@using PathFinder.DataTransferObjects.DTOs.Identity.Request
@model SendForgotPasswordDTO
@{
    Layout = "_LayoutAccount";
}
<div class="main-wrapper">
    <div class="account-content">
        <div class="container">

            
    </div> 
    <!-- /Account Logo -->


            <div class="account-box">
                <div class="account-wrapper">
                    <div class="account-logo">
                    <img src="\img\Pathfinder Logo Transparent.png" alt="Logo">
                    </div>
                    <h3 class="account-title">@CoreResources.ForgotPassword</h3>

                    <!-- Account Form -->
                    <div class="row">
                        <form asp-controller="Account" asp-action="ForgotPassword">
                            <div class="form-group">
                                <label>@CoreResources.Email</label>
                                <input class="form-control" placeholder="@CoreResources.Email" asp-for="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group text-center">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <button class="btn btn-primary btn-design account-btn">@CoreResources.Send_email</button>
                            </div>
                        </form>
                    </div>
                    <!-- /Account Form -->

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
        <script>
            $(document).ready(function () {
                let favicon = localStorage.getItem("favicon");
                let backendlogo = localStorage.getItem("logo");
                jQuery('link[rel="shortcut icon"]').attr('href', favicon);
                $('#logo').attr('src', backendlogo);
                let btnColor = localStorage.getItem("btnColor");
                if (btnColor != '')
                    $('.btn-design').css('background', btnColor)
            });
        </script>
}