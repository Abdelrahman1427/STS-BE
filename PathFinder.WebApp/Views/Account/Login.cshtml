@using PathFinder.DataTransferObjects.DTOs.Account
@inject IConfiguration Configuration
@inject IHttpContextAccessor Context
@model LoginRequestDTO

@{
    Layout = "_LayoutAccount";
}

<div class="main-wrapper">
    <div class="account-content">
        @* <a href="job-list.html" class="btn btn-primary apply-btn">Apply Job</a> *@

        <div class="container">

            <!-- /Account Logo -->

            <div class="account-box">
                <div class="account-wrapper">
                    <div class="account-logo mb-1">
                        <img src="\img\Pathfinder Logo Transparent.png" alt="Login Image">
                    </div>
                    <h3 class="account-title">@CoreResources.LogIn</h3>
                    <p class="account-subtitle">@CoreResources.AccessMyDashboard</p>

                    <!-- Account Form -->
                    <div class="row">
                        <form asp-controller="Account" asp-action="Login" method="post">
                            <input type="hidden" asp-for="ReturnUrl" />
                            <div class="input-block mb-4">
                                <label class="col-form-label">@CoreResources.Enter_Your_Email_Phone</label>
                                <input class="form-control" placeholder="@CoreResources.Enter_Your_Email_Phone" asp-for="UserEmailOrMobile">
                            </div>
                            <div class="input-block mb-4">
                                <div class="row align-items-center">
                                    <div class="col">
                                        <label class="col-form-label">@CoreResources.Password</label>
                                    </div>
                                    <div class="col-auto">
                                        <a id="forgotpassword" class="forgot-pass mx-2" asp-area="" asp-controller="Account" asp-action="ForgotPassword" asp-route-returnUrl="@Model.ReturnUrl">
                                            @CoreResources.ForgotPassword
                                        </a>
                                    </div>
                                </div>
                                <div class="position-relative">
                                    <input type="password" class="form-control" id="password" placeholder="@CoreResources.Password" asp-for="Password" autocomplete="off">
                                    <i class="fa-solid fa-eye-slash" id="toggle-password"></i>
                                </div>
                            </div>

        
                            <div class="form-check">
                                <input class="form-check-input" asp-for="RememberLogin">
                                <label class="form-check-label" asp-for="RememberLogin">
                                        @CoreResources.RememberMe
                                </label>
                            </div>
                            <div class="form-check d-flex justify-content-between align-items-center">
                                <div>
                                    <input class="form-check-input" asp-for="TermsAndConditionsAcceptanceFlag">
                                    <label class="form-check-label text-start">
                                            @CoreResources.I_agree_to_the
                                        <a asp-area="Definitions" asp-controller="TermsAndConditions" asp-action="Index">@CoreResources.TermsAndConditions</a>
                                    </label>
                                </div>
                            </div>
                            <div class="input-block mb-4 text-center">
                                <button class="btn btn-primary account-btn" type="submit" value="login">@CoreResources.LogIn</button>

                            </div>



                            <div id="validations" class="text-danger">
                                <div class="input-group justify-content-center">
                                    <span asp-validation-for="UserEmailOrMobile" class="text-danger"></span>
                                </div>
                                <div class="input-group justify-content-center">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="input-group justify-content-center">
                                    <span asp-validation-for="TermsAndConditionsAcceptanceFlag" class="text-danger"></span>
                                </div>

                            </div>

                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
